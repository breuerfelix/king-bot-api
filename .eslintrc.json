{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parser": "typescript-eslint-parser",
    "parserOptions": {
        "sourceType": "module",
		"ecmaVersion": 2018
    },
    "rules": {
	"no-unused-vars": "warn",
	"no-undef": "off",
	"no-constant-condition": "off",
        "indent": [
            "error",
	    "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
	"no-console": 0
    }
}
